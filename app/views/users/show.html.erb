<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user, books: @books %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>

      <table class="table table-bordered">
        <thead class="table-info">
          <th>獲得いいね合計</th>
          <th>レベル</th>
        </thead>
        <tbody>
          <tr>
            <td><%= @point_sum %></td>
            <td><%= @level %></td>
          </tr>
        </tbody>
      </table>

      <h3>投稿数の前日比・前週比</h3>
      <%= render "users/compare",today_book: @today_book,yesterday_book: @yesterday_book,
      yesterday_compare: @yesterday_compare,this_week: @this_week,last_week: @last_week,week_compare: @week_compare %>

      <h3>7日間分の投稿数</h3>
      <%= render "users/graph",books: @books,yesterday_book: @yesterday_book,today_book: @today_book %>

      <%= form_with url: user_search_path(@user),method: :get,local:false do |f| %>
        <%= f.date_field :created_at %>
        <%= f.submit "検索",class:"btn btn-primary" %>
      <% end %>

      <div id="search_result">
        <% if @search_book.present? %>
          <%= render "search",search_book: @search_book %>
        <% end %>
      </div>

    </div>
  </div>
</div>
