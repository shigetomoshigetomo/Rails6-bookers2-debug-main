<% if book.favorited_by?(current_user) %>
  <p>
    <%= link_to book_favorites_path(book),method: :delete,remote:true,style:"text-decoration:none;" do %>
      <i class="fas fa-heart" style="color:red;"></i><span style="color:red;"><%= book.favorites.count %></span>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to book_favorites_path(book),method: :post,remote:true,style:"text-decoration:none;" do %>
      <i class="fas fa-heart text-primary"></i><%= book.favorites.count %>
    <% end %>
  </p>
<% end %>