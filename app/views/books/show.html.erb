<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info',user:@book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"40x40" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id==current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% else %>
            <td>
              <% if @book.favorited_by?(current_user) %>
                <p>
                  <%= link_to book_favorites_path(@book),method: :delete do %>
                    <i class="fas fa-heart text-danger"></i><span class="text-danger"><%= @book.favorites.count %></span>
                  <% end %>
                </p>
              <% else %>
                <p>
                  <%= link_to book_favorites_path(@book),method: :post do %>
                    <i class="fas fa-heart text-primary"></i><%= @book.favorites.count %>
                  <% end %>
                </p>
              <% end %>
            </td>
            <td>コメント数:<%= @book.book_comments.count %></td>
          <% end %>

        </tr>
      </table>

      <table>
        <tbody>
          <% @book.book_comments.each do |book_comment| %>
          <tr>
            <td>
              <%= image_tag book_comment.user.get_profile_image,size:"40x40" %><br>
              <%= link_to book_comment.user.name,user_path(book_comment) %>
            </td>
            <td>
              <%= book_comment.comment %>
            </td>
            <td>
              <% if book_comment.user==current_user %>
                <%= link_to "Destroy",book_book_comment_path(book_comment.book,book_comment),method: :delete,class:"btn btn-danger btn-sm" %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <%= form_with model:[@book,@book_comment] do |f| %>
      <div class="form-group">
        <%= f.text_area :comment,rows:'4',class:"form-control" %><br>
        <%= f.submit "送信"%>
      </div>
      <% end %>
      </div>
    </div>
  </div>
</div>