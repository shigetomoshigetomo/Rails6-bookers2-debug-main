<div class="container px-5 px-sm-0">
  <div class="row">
    <% if user_signed_in? %>
      <div class="col-md-3"></div>
      <div class="col-md-8 offset-md-1">
        <div class="search-form">
          <%= form_with url: books_path,local:true,method: :get do |f| %>
            <%= f.text_field:word %>
            <%= f.submit "タグ検索",class:"btn btn-sm btn-primary" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>