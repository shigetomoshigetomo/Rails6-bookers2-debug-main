<table>
  <tbody>
    <% book.book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%= image_tag book_comment.user.get_profile_image,size:"40x40" %><br>
        <%= link_to book_comment.user.name,user_path(book_comment) %>
      </td>
      <td>
        <%= book_comment.comment %>
      </td>
      <td>
        <% if book_comment.user==current_user %>
          <%= link_to "Destroy",book_book_comment_path(book,book_comment),method: :delete,remote:true,class:"btn btn-danger btn-sm" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>